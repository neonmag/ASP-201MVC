@model ASP_201MVC.Models.Forum.ForumThemeViewModel

<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media d-flex w-100 align-items-center">
                        <img src="@Model.AuthorAvatarUrl" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body mx-2">
                            <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.AuthorName" data-abc="true">@Model.AuthorName</a>
                            <div class="text-muted small">@Model.CreatedDtString</div>
                        </div>
                        <div class="ms-auto text-muted small mx-2">
                            <div>Member since <strong>@Model.ProfileCreateDt</strong></div>
                            <div><strong>134</strong> posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                  <h5>@Model.Title</h5>
                  <p>@Model.Description</p>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">

                    <div class="px-4 pt-3"> <a href="javascript:void(0)" class="text-muted d-inline-flex align-items-center align-middle" data-abc="true"> <i class="fa fa-heart text-danger"></i>&nbsp; <span class="align-middle">445</span> </a> <span class="text-muted d-inline-flex align-items-center align-middle ml-4"> <i class="fa fa-eye text-muted fsize-3"></i>&nbsp; <span class="align-middle">14532</span> </span> </div>
                    <span class="g-color-gray-dark-v4"
                          style="margin-left: 3em"
                          role="button"
                          data-rating="@Model.UrlIdString" data-rating-value="1"
                          data-rating-given="@(Model.GivenRating == 1? "true": "false")">
                        @if (Model.GivenRating == 1)
                        {
                            <i class="bi-hand-thumbs-up-fill"></i>
                        }
                        else
                        {
                            <i class="bi-hand-thumbs-up"></i>
                        }
                        @Model.LikesCount
                    </span>
                    <span class="g-color-gray-dark-v4 mx-3"
                          role="button"
                          data-rating="@Model.UrlIdString" data-rating-value="-1"
                          data-rating-given="@(Model.GivenRating == -1? "true": "false")">
                        @if (Model.GivenRating == -1)
                        {
                            <i class="bi-hand-thumbs-down-fill"></i>

                        }
                        else
                        {
                            <i class="bi-hand-thumbs-down"></i>
                        }
                        @Model.DislikesCount
                    </span>
                    <div class="px-4 pt-3"> <a asp-action="Themes" asp-route-id="@Model.UrlIdString" class="btn btn-primary"><i class="ion ion-md-create"></i>Перейти</a> </div>
                </div>
            </div>
        </div>
    </div>
</div>